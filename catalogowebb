<!-- Modal -->
<div class="modal" id="modal">
    <div class="modal-content">
        <h2 id="modal-title"></h2>
        <img id="modal-image" src="" alt="">
        <p id="modal-description"></p>
        <button class="close" onclick="closeModal()">Cerrar</button>
    </div>
